<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <form action="/delete" method="post">
    <div class="box">
    <%newListItems.forEach(element =>{%>
      <div class="item">
        <input type="checkbox" name="checkbox" onChange="this.form.submit()" value="<%=element._id%>">
        <p><%=  element.name  %></p>
      </div>
      </form>
    
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
